<div class='single-post-container'>
  <div class='single-post-card'>
    <div class='post-card-header'>
      <h2>{{post.title}}</h2>
      <p>by {{post.user.username}} on {{formatDate post.createdAt}}</p>
    </div>
    <p class='post-card-content'>{{{ preserveLineBreaks post.content}}}</p>
  </div>
  {{#each post.comments}}
    {{> comment-card}}
  {{/each}}
  {{> add-comment}}

